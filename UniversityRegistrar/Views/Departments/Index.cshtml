@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Department>;

<h1>Departments</h1>

@if (@Model.Count == 0)
{
  <h3>No departments have been added yet!</h3>
} 

@foreach (Department department in Model)
{
  <h3>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</h3>
}

<p>@Html.ActionLink("Add new department", "Create")</p>

<p>@Html.ActionLink("Back to home page", "Index", "Home")</p>