@{
  Layout = "_Layout";
}
@model UniversityRegistrar.Models.Course
<h2>Edit</h2>
<h4>Edit this course: @Html.DisplayFor(model => model.CourseName)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)
    @Html.LabelFor(model => model.CourseName)
    @Html.EditorFor(model => model.CourseName)<br>
    @Html.LabelFor(model => model.CourseNumber)
    @Html.EditorFor(model => model.CourseNumber)<br>
    <input class="btn" type="submit" value="Save changes" />
}
<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Back to homepage", "Index", "Home")</p>